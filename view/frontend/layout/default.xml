<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
	<head>
		<css src="SY_MultipleLayeredNavigation::css/styles.css" />
	</head>
	<body>
		<referenceBlock name="catalog.navigation.renderer">
			<action method="setTemplate">
				<argument name="template" xsi:type="string">SY_MultipleLayeredNavigation::layer/filter.phtml</argument>
			</action>
		</referenceBlock>
		<referenceBlock name="catalogsearch.navigation.renderer">
			<action method="setTemplate">
				<argument name="template" xsi:type="string">SY_MultipleLayeredNavigation::layer/filter.phtml</argument>
			</action>
		</referenceBlock>
	</body>
</page>